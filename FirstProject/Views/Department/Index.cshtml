@model IEnumerable<Department>
@{
    Layout = "_Layout";
}
    <a asp-action="AddDepartment" class="btn btn-warning">Add department</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>DeptName</th>
                <th>Dept Capacity</th>
                <th>Operation</th>
            </tr>
        </thead>
        
        <tbody>
            @if(Model.Count()>0) { 
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.DepartmentName</td>
                    <td>@item.Capacity</td>
                       
                        <td>
                        <a asp-action="details" asp-route-id="@item.DepartmentId" class="btn btn-info">Details</a>
                        <a asp-action="ManageCourses" asp-route-id="@item.DepartmentId" class="btn btn-light">Manage Courses</a>
                            @*<a asp-action="edit" asp-route="@item.DepartmentId" class="btn btn-light">Edit</a>
                    <a asp-action="delete" asp-route="@item.DepartmentId" class="btn btn-danger">Delete</a>*@
                    </td>
                    </tr>
                }
            }
            else
                {
                    <tr>
                        <td colspan="5"> No student Found</td>
                    </tr>
                }
        </tbody>
    </table>